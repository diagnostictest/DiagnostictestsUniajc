<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TestActivity"
    tools:showIn="@layout/activity_test">

    <ViewAnimator
        android:id="@+id/viewanimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="10"
            android:paddingBottom="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:src="@drawable/clock"
                android:layout_margin="5dp"
                android:layout_height="100dp" />
            <TextView android:id="@+id/timeTest"
                android:layout_width="match_parent"
                android:layout_alignLeft="@+id/myImageView"
                android:layout_alignTop="@+id/myImageView"
                android:layout_alignRight="@+id/myImageView"
                android:layout_alignBottom="@+id/myImageView"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"  />
            <android.support.v7.widget.CardView
                android:id="@+id/numbertest"
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_below="@+id/myImageView"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ddff"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/contentquestion"
                android:layout_alignBottom="@+id/numbertest"
                android:layout_alignTop="@+id/myImageView"
                android:layout_toRightOf="@+id/myImageView"
                android:padding="10dp"
                android:layout_marginBottom="0dp"
                android:layout_margin="10dp"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ddff"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_below="@+id/timeTest"
                android:id="@+id/contenedor"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="90"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView

                android:id="@+id/Q1"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_margin="4dp"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="?android:attr/listPreferredItemHeight"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="ddff"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/Q2"
                android:layout_below="@+id/Q1"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="4dp"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ddff"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/Q3"
                android:layout_below="@+id/Q2"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="4dp"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ddff"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/Q4"
                android:layout_below="@+id/Q3"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="4dp"
                android:layout_height="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ddff"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:background="#fcef00"
                android:layout_weight="50"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ViewAnimator>
</RelativeLayout>
