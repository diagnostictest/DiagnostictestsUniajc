<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TestActivity"
    tools:showIn="@layout/activity_test">

    <ViewAnimator
        android:id="@+id/viewanimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_weight="20"
                android:paddingBottom="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="?android:attr/listPreferredItemHeight"
                    android:src="@drawable/clock"
                    android:layout_margin="5dp"
                    android:layout_height="100dp" />
                <TextView android:id="@+id/timeTest"
                    android:layout_width="match_parent"
                    android:layout_alignLeft="@+id/myImageView"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_alignRight="@+id/myImageView"
                    android:layout_alignBottom="@+id/myImageView"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="30"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"  />

                    <RelativeLayout
                        android:id="@+id/numbertest"
                        android:layout_width="?android:attr/listPreferredItemHeight"
                        android:layout_below="@+id/myImageView"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/idpregunta"
                            android:layout_width="?android:attr/listPreferredItemHeight"
                            android:textColor="@android:color/white"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:shadowColor="#a6a39b"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/contentquestion"
                    android:layout_alignBottom="@+id/numbertest"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_toRightOf="@+id/myImageView"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_height="70dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textquestion"
                            android:layout_width="match_parent"
                            android:text="ddff"
                            android:textColor="@android:color/holo_orange_dark"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:shadowColor="#a6a39b"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <RelativeLayout
                    android:layout_below="@+id/timeTest"
                    android:id="@+id/contenedor"
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="10"
                android:paddingTop="10dp"
                android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/Q1"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:onClick="Answer1"
                        android:background="@drawable/red_button"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="?android:attr/listPreferredItemHeight"
                            android:layout_height="match_parent"
                            android:src="@drawable/circulo"
                             />
                        <TextView
                            android:id="@+id/txtQ1"
                            android:layout_width="match_parent"
                            android:text="ddff"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:shadowColor="#8a6603"
                            android:shadowDx="3"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:layout_toRightOf="@+id/img1"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/Q2"
                        android:layout_below="@+id/Q1"
                        android:background="@drawable/green_button"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:onClick="Answer2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="?android:attr/listPreferredItemHeight"
                            android:src="@drawable/cuadrado"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/txtQ2"
                            android:layout_width="match_parent"
                            android:text="ddff"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:shadowColor="#8a6603"
                            android:shadowDx="3"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/img2"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Q3"
                        android:layout_below="@+id/Q2"
                        android:layout_margin="4dp"
                        android:background="@drawable/blue_button"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:onClick="Answer3"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="?android:attr/listPreferredItemHeight"
                            android:src="@drawable/triangulo"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/txtQ3"
                            android:layout_width="match_parent"
                            android:text="ddff"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:shadowColor="#8a6603"
                            android:shadowDx="3"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/img3"
                            android:layout_height="match_parent" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/Q4"
                        android:layout_below="@+id/Q3"
                        android:layout_width="match_parent"
                        android:background="@drawable/orange_button"
                        android:clickable="true"
                        android:onClick="Answer4"
                        android:layout_margin="4dp"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="?android:attr/listPreferredItemHeight"
                            android:src="@drawable/xx"
                            android:scaleType="fitCenter"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/txtQ4"
                            android:layout_width="match_parent"
                            android:text="ddff"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:shadowColor="#8a6603"
                            android:shadowDx="3"
                            android:shadowDy="2"
                            android:shadowRadius="1.8"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/img4"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:background="#fcef00"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/clock"/>
                   <Button
                       android:layout_width="wrap_content"
                       android:text="Siguiente"
                       android:layout_gravity="center"
                       android:onClick="nextQuestion"
                       android:layout_height="wrap_content" />
        </LinearLayout>
    </ViewAnimator>
</RelativeLayout>
